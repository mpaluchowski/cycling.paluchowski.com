RewriteEngine On

RewriteCond %{HTTPS} !=on
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

<IfModule mod_headers.c>
    Header set Content-Security-Policy "default-src 'self'; script-src 'unsafe-inline' 'unsafe-eval' 'self' https://*.gstatic.com https://www.google-analytics.com https://disqus.com https://*.disqus.com https://*.disquscdn.com; style-src 'unsafe-inline' 'self' https://fonts.googleapis.com https://*.disquscdn.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' https://www.google-analytics.com https://*.disqus.com https://*.disquscdn.com https://www.gravatar.com; frame-src 'self' https://www.strava.com https://disqus.com https://*.disqus.com https://*.spotify.com https://*.facebook.com https://*.twitter.com https://*.google.com https://www.youtube.com; connect-src 'self' https://*.disqus.com"
    Header set X-Frame-Options DENY

    <FilesMatch "\.(jpg|jpeg|png|svg|ico)$">
        Header set Cache-Control "max-age=604800, public"
    </FilesMatch>
    <FilesMatch "\.(css|js)$">
        Header set Cache-Control "max-age=86400, public"
    </FilesMatch>
</IfModule>

# Enable GZIP compression for all text files
<IfModule mod_deflate.c>
    <IfModule mod_filter.c>
        AddOutputFilterByType DEFLATE application/atom+xml \
                                      application/javascript \
                                      application/json \
                                      application/ld+json \
                                      application/manifest+json \
                                      application/rdf+xml \
                                      application/rss+xml \
                                      application/schema+json \
                                      application/vnd.geo+json \
                                      application/vnd.ms-fontobject \
                                      application/x-font-ttf \
                                      application/x-javascript \
                                      application/x-web-app-manifest+json \
                                      application/xhtml+xml \
                                      application/xml \
                                      font/eot \
                                      font/opentype \
                                      image/bmp \
                                      image/svg+xml \
                                      image/vnd.microsoft.icon \
                                      image/x-icon \
                                      text/cache-manifest \
                                      text/css \
                                      text/html \
                                      text/javascript \
                                      text/plain \
                                      text/vcard \
                                      text/vnd.rim.location.xloc \
                                      text/vtt \
                                      text/x-component \
                                      text/x-cross-domain-policy \
                                      text/xml
    </IfModule>
</IfModule>
